default-fonts = -apple-system, BlinkMacSystemFont, "Segoe UI", Roboto, Oxygen-Sans, Ubuntu, Cantarell, "Helvetica Neue", sans-serif
theme-color = #ffd54f

default-menu-icon()
  :local(.menu-icon)
    :local(.bar)
      transform translate(0)
      fill white
      transition fill 0.2s ease-in-out, transform 0.4s cubic-bezier(.45,.98,.38,1.52)
      transform-origin center
      &:nth-child(2)
        transition-delay 0s, 0.05s
      &:last-child
        transition-delay 0s, 0.1s
    
animate-menu-icon()
  :local(.menu-icon) :local(.bar)
    fill #ccc
    &:first-child
      transform translate(5px)
    &:nth-child(2)
      transform translate(1px)
    &:last-child
      transform translate(5px)

nav
  a
    font-weight bold
    font-size 1.3rem
    font-family Montserrat, default-fonts
    color #222
    border solid 2px #222
    text-decoration none
    margin-bottom 5vh
    width 10rem
    padding 0.75rem 0
    text-align center
    transition background-color 0.2s ease-in-out, color 0.2s ease-in-out
    &:hover
      background-color #222
      color theme-color
  .hamburger
    width 3rem
    height 3rem
    display block
    cursor pointer
    position fixed
    left 1rem
    top 1rem
    z-index 999
    transition left 0.35s ease-in-out
    animation fadeIn 0.35s 1s ease-in-out forwards
    .menu-icon
      width 100%
      height 100%
      cursor pointer
    default-menu-icon()
    &:hover
      animate-menu-icon()
  .links
    display flex
    flex-direction column
    align-items center
    position fixed
    width 16rem
    height 90%
    padding 9rem 4rem 0
    left -24rem
    top 0
    background-color rgba(theme-color, 0.8)
    transition left 0.35s ease-in-out
    z-index 998
    @media (max-device-width 500px)
      left -100vw
      width 100vw
      height 100vh
      padding 0
      justify-content center
  input[type='checkbox']
    display none
    &:checked
      & + :local(.hamburger)
        left 16rem
        animate-menu-icon()
        &:hover :local(.menu-icon) :local(.bar)
          fill #444 !important
        :local(.menu-icon) :local(.bar)
          fill #222 !important
      & ~ section
        left 0

@keyframes fadeIn
  0%
    visibility hidden
    opacity 0
  50%
    visibility visible
    opacity 0
  100%
    visibility visible
    opacity 1