default-fonts = -apple-system, BlinkMacSystemFont, "Segoe UI", Roboto, Oxygen-Sans, Ubuntu, Cantarell, "Helvetica Neue", sans-serif
theme-color = #fed766

.theme-button
  background none
  border solid 2px theme-color
  border-radius 50px
  font-family Montserrat, default-fonts
  font-weight 700
  color #fff
  padding 0.85rem 1.75rem
  font-size 1rem
  transition color 0.35s ease, background-color 0.35s ease, padding 0.35s ease
  text-transform uppercase
  cursor pointer
  position relative
  will-change padding, color, background-color
  &::after
    content ''
    position absolute
    top calc(100% + 4px)
    background-color rgba(theme-color, 0.8)
    left 50%
    transform translateX(-50%)
    height 1px
    transition width 0.35s ease
    border-radius: 14px
    width 0
  &:hover, &:active
    color #222
    background-color theme-color
    padding 0.85rem 2.75rem
  &:focus
    outline none
    &:not(:active)::after
      width 80%