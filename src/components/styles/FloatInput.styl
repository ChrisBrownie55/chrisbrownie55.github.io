default-fonts = -apple-system, BlinkMacSystemFont, "Segoe UI", Roboto, Oxygen-Sans, Ubuntu, Cantarell, "Helvetica Neue", sans-serif
theme-color = #fed766

:global(.float-input)
  position relative
  display flex
  &::after
    position absolute
    content ''
    width 0
    height 1px
    left 0
    bottom -3px
    background-color theme-color
    transition width 0.25s ease-in-out
  &:global(.float-textarea)
    &::after
      bottom -5px
  &:focus-within
    &::after
      width 100%
  input, textarea, label
    font-family Questrial, default-fonts
    font-size 1.125rem
  input, textarea
    width 100%
    height 100%
    background-color transparent
    border none
    border-bottom solid 1px white
    color white
    resize none
    &:-webkit-autofill
      &:hover, &:focus, &
        transition background-color 999999s
        -webkit-text-fill-color white
        text-fill-color white
        caret-color white
    &:global(.notempty):not(:focus)
      &:invalid
        border-bottom-color red
      &:valid
        border-bottom-color green
      &:valid, &:invalid
        border-bottom-width 2px
    &:focus
      outline none
    &:focus ~ label, &:global(.notempty) ~ label
        top -15%
        color LightGrey
        font-size 0.8rem
  label
    position absolute
    top 0.75rem
    left 0.15rem
    transition top 0.25s, font-size 0.15s, color 0.15s
    will-change top, font-size, color
    cursor text
    user-select none
